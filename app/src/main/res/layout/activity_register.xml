<?xml version="1.0" encoding="utf-8"?>
 <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/white">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@drawable/border">


        <TextView
            android:id="@+id/textView_register_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sign-up"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_register_head"
            android:id="@+id/Rl_reg1"
            android:background="@drawable/border"
            android:padding="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imageViewPerson"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"

                android:src="@drawable/ic_profile">


            </ImageView>

            <View
                android:id="@+id/divider_person"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_below="@+id/textview_register_full_name"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/imageViewPerson"
                android:background="@android:color/darker_gray">

            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_register_full_name"
                android:text="Full name "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_toEndOf="@+id/imageViewPerson"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_register_full_name"
                android:hint="Enter Your Full Name"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_below="@+id/textview_register_full_name"
                android:background="@android:color/transparent"
                android:layout_toEndOf="@+id/imageViewPerson"/>


        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Rl_reg1"
        android:id="@+id/Rl_reg2"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">


        <ImageView
            android:id="@+id/imageViewEmail"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"

            android:src="@drawable/ic_email">


        </ImageView>

        <View
            android:id="@+id/divider_email"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/textview_register_email"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/imageViewEmail"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_email"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_toEndOf="@+id/imageViewEmail"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_register_email"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@+id/textview_register_email"
            android:background="@android:color/transparent"
            android:layout_toEndOf="@+id/imageViewEmail"/>


    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Rl_reg2"
        android:id="@+id/Rl_reg3"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">


        <ImageView
            android:id="@+id/imagview_dob"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"

            android:src="@drawable/ic_birthday">


        </ImageView>

        <View
            android:id="@+id/divider_birthday"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/textview_register_dob"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/imagview_dob"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_dob"
            android:text="Date Of Birth"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imagview_dob"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_register_dob"
            android:hint="Enter Your date of birth(dd/mm/yyyy)"
            android:inputType="date"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@+id/textview_register_dob"
            android:background="@android:color/transparent"
            android:layout_toEndOf="@+id/imagview_dob"/>

    </RelativeLayout>



<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/Rl_reg3"
    android:id="@+id/Rl_reg4"
    android:background="@drawable/border"
    android:padding="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp">


    <ImageView
        android:id="@+id/imagview_gender"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"

        android:src="@drawable/ic_gender">


    </ImageView>

    <View
        android:id="@+id/divider_gender"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_below="@+id/textview_register_gender"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/imagview_gender"
        android:background="@android:color/darker_gray"/>






        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_gender"

            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:padding="6dp"

            android:layout_toEndOf="@+id/imagview_gender"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radiogroup_register_gender"
            android:layout_below="@id/textview_register_gender"
            android:background="@android:color/transparent"
            android:layout_toEndOf="@+id/imagview_gender">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_male"
                android:text="Male"
                android:textSize="16sp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_female"
                    android:layout_marginLeft="10dp"
                    android:text="Female"
                    android:textSize="16sp"/>


        </RadioGroup>

</RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Rl_reg4"
        android:id="@+id/Rl_reg5"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">



        <ImageView
            android:id="@+id/imagview_mobile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_mobile">


        </ImageView>

        <View
            android:id="@+id/divider_mobile"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/textview_register_mobile"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/imagview_mobile"
            android:background="@android:color/darker_gray"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_mobile"
            android:text="Mobile"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imagview_mobile"/>

        <EditText
            android:id="@+id/editText_register_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textview_register_mobile"
            android:layout_toEndOf="@id/imagview_mobile"
            android:background="@android:color/transparent"
            android:hint="Enter your phone number"
            android:inputType="phone"
            android:padding="6dp"
            android:textSize="16sp" />

    </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Rl_reg5"
            android:id="@+id/Rl_reg6"
            android:background="@drawable/border"
            android:padding="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">



            <ImageView
                android:id="@+id/imagview_password"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_pwd_bw">


            </ImageView>

            <View
                android:id="@+id/divider_password"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_below="@+id/textview_register_password"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/imagview_password"
                android:background="@android:color/darker_gray"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_register_password"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/imagview_password"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_register_password"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:padding="6dp"
                android:layout_below="@+id/textview_register_password"
                android:background="@android:color/transparent"
                android:layout_toEndOf="@+id/imagview_password"/>

            <ImageView
                android:id="@+id/showhidepassword"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/textview_register_password"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp">

            </ImageView>



        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Rl_reg6"
        android:id="@+id/Rl_reg7"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imagview_confirm_password"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_pwd_bw">


        </ImageView>

        <View
            android:id="@+id/divider_confirm_password"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/textview_register_confirm_password"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/imagview_confirm_password"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_confirm_password"
            android:text="Confirm Password"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imagview_confirm_password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_register_confirm_password"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@+id/textview_register_confirm_password"
            android:background="@android:color/transparent"
            android:layout_toEndOf="@+id/imagview_confirm_password"/>

        <ImageView
            android:id="@+id/showhideconfirmpassword"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textview_register_confirm_password"
            android:layout_alignParentEnd="true">

        </ImageView>
        </RelativeLayout>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/progressbar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:visibility="gone"/>
        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_register"
            android:text="Register"
            android:layout_below="@+id/Rl_reg7"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_register"
            android:layout_marginTop="10dp"

            android:orientation="vertical"
            android:id="@+id/ll_1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_login"
                android:layout_marginTop="20dp"
                android:text="Already have an account?"
                android:textAlignment="center"
                android:layout_marginLeft="60dp"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_register"
            android:layout_marginTop="10dp"
            android:orientation="vertical"

            android:id="@+id/ll_2"
            android:layout_toEndOf="@id/ll_1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_login_link"
                android:layout_marginTop="20dp"
                android:text="sign in now"
                android:textAlignment="center"
                android:textColor="@color/purple_700"/>


        </LinearLayout>




    </RelativeLayout>

</ScrollView>